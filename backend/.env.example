PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/weatherdb

# JWT (Use a strong secret key with at least 32 characters in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# OpenWeatherMap API
OPENWEATHER_API_KEY=your_openweathermap_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173,https://your-app.vercel.app

# Logging (error, warn, info, http, debug)
LOG_LEVEL=info

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Resend Email Configuration
# Sign up at https://resend.com to get your API key (3,000 emails/month free)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=onboarding@resend.dev
EMAIL_FROM_NAME=Weather Dashboard

# Email Setup Instructions:
# 1. Create account at https://resend.com
# 2. Get API key from dashboard
# 3. For testing: Use EMAIL_FROM=onboarding@resend.dev
# 4. For production: Add your domain at https://resend.com/domains
# 5. Verify DNS records (DKIM, SPF, DMARC)
# 6. After verification: Set EMAIL_FROM=noreply@yourdomain.com
